generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_departamento {
  id     Int     @id @default(autoincrement())
  nombre String? @db.VarChar(800)
}

model tb_municipio {
  id              Int      @id @default(autoincrement())
  id_departamento Int
  nombre          String?  @db.VarChar(800)
  estado          Boolean?

  @@index([id_departamento], map: "id_departamento")
}

model tb_personas_club {
  id                Int       @id @default(autoincrement())
  tipo_documento    String    @db.VarChar(10)
  id_municipio      Int
  id_usuario        Int
  nombres           String    @db.VarChar(5000)
  apellidos         String    @db.VarChar(5000)
  fecha_nacimento   DateTime? @db.Date
  tipo_rh           String?   @db.VarChar(100)
  peso              Float?    @db.Float
  altura            Float?    @db.Float
  correo            String    @db.VarChar(5000)
  numero_telefono   Int?
  talla_camisa      String?   @db.VarChar(100)
  talla_calzado     String?   @db.VarChar(100)
  talla_pantaloneta String?   @db.VarChar(100)
  genero            String?   @db.VarChar(200)
  direccion         String?   @db.Text

  @@index([id_municipio], map: "id_municipio")
}

model tb_tipo_documento {
  id             Int     @id @default(autoincrement())
  tipo_documento String? @db.VarChar(5)
  descripcion    String? @db.VarChar(500)
}

model tb_cargos_admin {
  id     Int     @id @default(autoincrement())
  nombre String? @db.VarChar(1000)
}

model tb_categorias {
  id     Int     @id @default(autoincrement())
  nombre String? @db.Text
}

model tb_contactos_emergencia {
  id             Int     @id @default(autoincrement())
  tipo_documento String  @db.VarChar(10)
  id_entrenador  Int?
  nombres        String? @db.VarChar(5000)
  apellidos      String? @db.VarChar(5000)
  correo         String? @db.Text
  telefono       String? @db.Text

  @@index([id_entrenador], map: "id_entrenador")
}

model tb_deportistas {
  id              Int      @id @default(autoincrement())
  id_tutor        Int?
  id_persona_club Int
  id_categoria    Int?
  activo          Boolean?

  @@index([id_categoria], map: "id_categoria")
  @@index([id_persona_club], map: "id_persona_club")
  @@index([id_tutor], map: "id_tutor")
}

model tb_desercion_deportistas {
  id              Int       @id @default(autoincrement())
  id_deportista   Int
  fecha_desercion DateTime? @db.Date
  razon           String?   @db.VarChar(800)
  descripcion     String?   @db.Text

  @@index([id_deportista], map: "id_deportista")
}

model tb_entrenadores {
  id              Int       @id @default(autoincrement())
  id_persona_club Int
  fecha_ingreso   DateTime? @db.Date
  activo          Boolean?
  contrato        Bytes?    @db.Blob

  @@index([id_persona_club], map: "id_persona_club")
}

model tb_gestion_admin {
  id            Int       @id @default(autoincrement())
  id_tutor      Int?
  id_deportista Int?
  id_cargo      Int?
  fecha_inicio  DateTime? @db.Date
  fecha_fin     DateTime? @db.Date
  activo        Boolean?

  @@index([id_cargo], map: "id_cargo")
  @@index([id_deportista], map: "id_deportista")
  @@index([id_tutor], map: "id_tutor")
}

model tb_pagos_deportistas {
  id            Int       @id @default(autoincrement())
  id_deportista Int
  fecha_pago    DateTime? @db.Date
  valor         Decimal?  @db.Decimal(10, 2)
  tipo_pago     String?   @db.Text

  @@index([id_deportista], map: "id_deportista")
}

model tb_tutores {
  id             Int     @id @default(autoincrement())
  tipo_documento String  @db.VarChar(10)
  nombres        String? @db.VarChar(5000)
  apellidos      String? @db.VarChar(5000)
  correo         String? @db.Text
  telefono       String? @db.Text
}

model tb_usuarios {
  id          Int      @id @default(autoincrement())
  usuario     String?  @db.VarChar(5000)
  contrasenia String?  @db.VarChar(5000)
  activo      Boolean?
  id_usuario  Int?

  @@index([id_usuario], map: "id_usuario")
}
