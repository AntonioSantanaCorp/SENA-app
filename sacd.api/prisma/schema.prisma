generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_departamento {
  id     Int     @id @default(autoincrement())
  nombre String? @db.VarChar(800)
}

model tb_municipio {
  id              Int      @id @default(autoincrement())
  id_departamento Int
  nombre          String?  @db.VarChar(800)
  estado          Boolean?

  @@index([id_departamento], map: "id_departamento")
}

model tb_personas_club {
  id                Int       @id @default(autoincrement())
  tipo_documento    String    @db.VarChar(10)
  id_municipio      Int
  id_usuario        Int
  nombres           String    @db.VarChar(5000)
  apellidos         String    @db.VarChar(5000)
  fecha_nacimento   DateTime? @db.Date
  tipo_rh           String?   @db.VarChar(100)
  peso              Float?    @db.Float
  altura            Float?    @db.Float
  correo            String    @db.VarChar(5000)
  numero_telefono   Int?
  talla_camisa      String?   @db.VarChar(100)
  talla_calzado     String?   @db.VarChar(100)
  talla_pantaloneta String?   @db.VarChar(100)
  genero            String?   @db.VarChar(200)
  direccion         String?   @db.Text

  @@index([id_municipio], map: "id_municipio")
}

model tb_tipo_documento {
  id             Int     @id @default(autoincrement())
  tipo_documento String? @db.VarChar(5)
  descripcion    String? @db.VarChar(500)
}
